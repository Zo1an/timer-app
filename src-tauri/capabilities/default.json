{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "fs:allow-desktop-write",
    "fs:allow-create",
    "fs:allow-desktop-read-recursive",
    "fs:allow-desktop-meta-recursive",
    {
      "identifier": "fs:allow-create",
      "allow": [{ "path": "*" }]
    }
  ]
}